<% if(blogs.length) { %>
<% blogs.forEach(blog => {  %>
<div class="blog-card">
  <div class="blog-header">
    <a href="/blogs/<%= blog._id %>">
      <h1><%= blog.title  %></h1>
    </a>
    <form action="/blogs/<%= blog._id  %>/delete" method="POST">
      <button class="blog-delete-btn" type="submit">
        <img src="/trash.svg" alt="" class="trash-icon">
      </button>
    </form>
  </div>
  <p><%= blog.intro  %></p>
</div>
<% }) %>
<% } else { %>
<h3>No Blogs Found.</h3>
<% } %>